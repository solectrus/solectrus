div
  .sm:hidden
    label.sr-only[for="tabs"]
      | Select a tab
    select#tabs.block.w-full.focus:ring-blue-500.focus:border-blue-500.border-gray-300.rounded-md[
        name="tabs"
        onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);"
      ]
      - items.each do |item|
        = tag.option item.first, value: item.second, selected: current_page?(item.second)

  .hidden.sm:block
    nav.flex.space-x-4[aria-label="Tabs"]
      - items.each do |item|
        - if current_page?(item.second)
          = link_to item.first,
                    item.second,
                    class: 'bg-gray-200 text-gray-800 px-3 py-2 font-medium text-sm rounded-md',
                    'aria-current': 'page'
        - else
          = link_to item.first,
                    item.second,
                    class: 'text-gray-600 hover:text-gray-800 px-3 py-2 font-medium text-sm rounded-md'
