.z-50.fixed.bottom-0.inset-x-0.border-t-4.p-8.hidden[
  class= background_class
  data-controller= 'app-flash--component'

  data-transition-enter=       'transition motion-reduce:duration-100 motion-safe:duration-500 ease-out'
  data-transition-enter-start= 'translate-y-32'
  data-transition-enter-end=   'translate-y-0'
  data-transition-leave=       'transition motion-reduce:duration-100 motion-safe:duration-500 ease-in'
  data-transition-leave-start= 'translate-y-0'
  data-transition-leave-end=   'translate-y-32'
]
  .flex.justify-center.items-center.mx-auto
    i class= icon_class
    p.text-base.font-medium.ml-2 class= text_class
      = text
