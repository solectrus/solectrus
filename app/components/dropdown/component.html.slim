div
  div data-controller= 'select'
    select[
      data-select-target= 'select'
      data-action= 'select#onChange'
      class= [button_class, 'block lg:hidden border-0 focus:ring-0 font-medium rounded text-sm']
      name= name
    ]
      - items.each do |item|
        option[
          value= item.href
          data= item.data
          selected= (item == selected_item)
        ]
          = item.name

    select[
      class= 'absolute invisible font-medium'
      data-select-target= 'temp'
      name= "#{name}-temp"
    ]
      option

  .hidden.relative.lg:inline-block.text-left data-controller="dropdown--component"
    - if button
      = button
    - else
      button#options-menu[
        type= 'button'
        class= [button_class, 'flex rounded-md px-2 sm:px-4 py-2 text-gray-900 font-medium focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm gap-2']
        data-dropdown--component-target="button"
        data-action="click->dropdown--component#toggle"
        aria-haspopup= 'true'
        aria-expanded= 'false'
      ]
        = selected_item&.name

        svg[
          class= 'h-5'
          viewbox= '0 0 20 20'
          fill= 'currentColor'
          aria-hidden= 'true'
        ]
          path[
            clip-rule= 'evenodd'
            fill-rule= 'evenodd'
            d= 'M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z'
          ]

    div[
      class= 'z-10 origin-top-right absolute right-0 mt-2 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden'
      data-dropdown--component-target="menu"
      data-transition-enter="transition ease-out duration-100"
      data-transition-enter-start="opacity-0 scale-95"
      data-transition-enter-end="opacity-100 scale-100"
      data-transition-leave="transition ease-in duration-75"
      data-transition-leave-start="opacity-100 scale-100"
      data-transition-leave-end="opacity-0 scale-95"
    ]
      .py-1.whitespace-nowrap aria-labelledby="options-menu" aria-orientation="vertical" role="menu"
        - items.each do |item|
          = item.call(with_icon: icons?, css_extra: ['py-2 px-3', item.current ? 'font-bold' : nil])
