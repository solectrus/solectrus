.relative.inline-block.text-left data-controller="dropdown--component"
  div data-dropdown--component-target="button" data-action="click->dropdown--component#toggleMenu"
    button#options-menu.inline-flex.justify-center.w-full.rounded-md.border.border-gray-300.shadow-sm.px-4.py-2.bg-white.text-sm.font-medium.text-gray-700.hover:bg-gray-50.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-offset-gray-100.focus:ring-indigo-500 aria-expanded="true" aria-haspopup="true" type="button"
      = selected_item[:name]
      svg.-mr-1.ml-2.h-5.w-5 aria-hidden="true" fill="currentColor" viewbox="0 0 20 20"
        path[
          clip-rule="evenodd"
          fill-rule="evenodd"
          d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
        ]

  .origin-top-right.absolute.right-0.mt-2.w-56.rounded-md.shadow-lg.bg-white.ring-1.ring-black.ring-opacity-5.hidden[
    data-dropdown--component-target="menu"
    data-transition-enter="transition ease-out duration-100"
    data-transition-enter-start="opacity-0 scale-95"
    data-transition-enter-end="opacity-100 scale-100"
    data-transition-leave="transition ease-in duration-75"
    data-transition-leave-start="opacity-100 scale-100"
    data-transition-leave-end="opacity-0 scale-95"
  ]
    .py-1 aria-labelledby="options-menu" aria-orientation="vertical" role="menu"
      - @items.each do |item|
        a.block.px-4.py-2.text-sm.text-gray-700.hover:bg-gray-100.hover:text-gray-900 href= item[:href] role="menuitem"
          = item[:name]
